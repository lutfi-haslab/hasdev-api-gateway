{
  "name": "hasdev-api-gateway",
  "private": true,
  "type": "module",
  "scripts": {
    "db:gn": "bun run ./src/scripts/db.js gen",
    "db:migrate:local": "bun run ./src/scripts/db.js migrate:local",
    "db:studio:local": "bun run ./src/scripts/db.js studio:local",
    "db:migrate:prod": "bun run ./src/scripts/db.js migrate:prod",
    "db:studio:prod": "bun run ./src/scripts/db.js studio:prod",
    "set:local": "cp .env.local .env && cp wrangler.local.jsonc wrangler.jsonc",
    "set:preview": "cp .env.preview .env && cp wrangler.prod.jsonc wrangler.jsonc",
    "set:prod": "cp .env.local .env && cp wrangler.prod.jsonc wrangler.jsonc",
    "dev": "bun run set:local && vite",
    "build": "vite build && vite build --ssr",
    "preview": "bun run set:preview && wrangler dev --port 5173",
    "deploy": "bun run set:prod && bun run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./env.d.ts"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-validator": "^0.7.0",
    "@tailwindcss/vite": "^4.1.8",
    "bcrypt-ts": "^7.1.0",
    "better-sqlite3": "^11.10.0",
    "cheerio": "^1.1.0",
    "dotenv-cli": "^8.0.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.10",
    "hono-openapi": "^0.4.8",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.513.0",
    "luxon": "^3.6.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2",
    "tailwindcss": "^4.1.8",
    "zod": "^3.25.56",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@types/js-cookie": "^3.0.6",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "drizzle-kit": "^0.31.1",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.2.0",
    "wrangler": "^4.16.0"
  }
}